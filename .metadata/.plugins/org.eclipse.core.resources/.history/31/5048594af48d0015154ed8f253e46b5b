#ifndef ZSQL_H_
#define ZSQL_H_
#include<iostream>
#include<mysql/mysql.h>
#include<errno.h>
#include<string>
#include<string.h>
using namespace std;

class ZSql{
public:
	ZSql();
	~ZSql();
	public :
		const void setDbName(  string sql);
		const void setUserName( string sql );
		const void setDbIp( string sql);
		const void setDbPasswd( string sql);
public:
		bool regsit();
protected:
		int si;
	//	MYSQL select();
private:

		MYSQL mysql;
		//MYSQL_RES *result;
	//private:
private:
		 string DbName;
		 string UserName;
		 string DbIp;
		 string DbPasswd;
};

ZSql::ZSql(){
	mysql_init(&mysql);
}

ZSql::~ZSql(){
	mysql_close(&mysql);
}

const void ZSql::setUserName( string sql) {
	UserName=sql;
}
const void ZSql::setDbName( string sql){
	DbName = sql;
}
const void ZSql::setDbPasswd( string sql){
	DbPasswd=sql;
}
const void ZSql::setDbIp( string sql){
	DbIp=sql;
}
bool ZSql::regsit(){
	if(mysql_real_connect(&mysql,DbIp.c_str(),UserName.c_str(),DbPasswd.c_str(),DbName.c_str(),NULL,NULL,0)){
		return true;
	}else{
		return false;
	}
}




#endif /* ZSQL_H_ */
