#include<iostream>
#include<sys/unistd.h>
#include<sys/stat.h>
#include<fcntl.h>
#include<stdio.h>
#include<sys/types.h>

unsigned long get_filesize(const char* file){ //  计算文件大小
	struct stat buf;
	stat(file,&buf);
	return buf.st_size;
}

int main(int argc, char* argv[])
{
	if(argv[1][0]=='-'){
		printf("gasjghj");
	}
	int fd;
	//char buff[2048];

	unsigned long size_f;
	fd=open(argv[1],O_RDONLY);//打开文件  如果文件不存在则建立此文件 并将文件去权限设置为可读可写
	size_f=get_filesize(argv[1]);
	char *buf= new char [size_f];
	//read(fd,buff,size_f);
	read(fd,buf,size_f);
	int fd1=open(argv[2],O_WRONLY);
	write(fd1,buf,size_f);
	std::cout << size_f<<std::endl;
	std::cout<<buf;
	//std::cout << buff;
	delete []buf;
	return 0;
}

