#include<iostream>
#include<ctime>
#include<cstdlib>
#include<stdlib.h>
#include<cstdio>
#include<stdio.h>
#include"Vectory.h"
int main()
{
	using namespace std;
	using VECTOR::Vectory;
	srand(time(0));
	double direction;
	Vectory step;
	Vectory result(0.0,0.0);
	unsigned long steps=0;
	double target;
	double dstep;
	cout<<"Enter target distance (q to quit):";
	while(cin >> target){
		cout<<"Enter step length:";
		if(!(cin>>dstep)){
			break;
		}
		while(result.magval()<target){
			direction = rand()%360;
			step.reset(dstep,direction,Vectory::POL);
			result=result+step;
			steps++;
		}
		cout<<"After "<<steps<<"steps, the subject has the following location:\n";
		cout<<result<<endl;
		result.polar_mode();
		steps=0;
		result.reset(0.0,0.0);
		cout<<"Enter target distance (q to quit):";
	}
	cout<<"Bye !"<<endl;
	cin.clear();
	while(cin.get()!='\n')
		continue;
	return 0;
}








